<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:userDetails="clr-namespace:GameReview.App.Features.UserDetails"
             xmlns:link="using:GameReview.App.Shared.Link"
             x:Class="GameReview.App.Pages.UserDetails.UserDetailsView">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label FontSize="Large"
                   Text="Profile"/>
            <userDetails:UserDetailsFormView
                BindingContext="{Binding UserDetailsFormViewModel}"/>
            <link:Link Text="Sign Out"
                       Route="//SignIn"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
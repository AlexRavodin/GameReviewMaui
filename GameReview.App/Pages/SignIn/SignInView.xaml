<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:signIn="using:GameReview.App.Features.SignIn"
             xmlns:link="using:GameReview.App.Shared.Link"
             x:Class="GameReview.App.Pages.SignIn.SignInView">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <Label FontSize="Large"
                       Text="Sign In"/>
                <signIn:SignInFormView BindingContext="{Binding SignInFormViewModel}" />
                <link:Link Text="Go To Sign Up" 
                            Route="//GameList"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
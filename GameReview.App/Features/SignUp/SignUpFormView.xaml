<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameReview.App.Features.SignUp.SignUpFormView">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Email"/>
            <Entry Text="{Binding Email}"/>
            
        </VerticalStackLayout>
        
        <VerticalStackLayout>
            <Label Text="Password"/>
            <Entry Text="{Binding Password}"
                   IsPassword="True"/>
            
        </VerticalStackLayout>
        
        <VerticalStackLayout>
            <Label Text="Confirm Password"/>
            <Entry Text="{Binding ConfirmPassword}"
                   IsPassword="True"/>
            
        </VerticalStackLayout>
        
        <Button Command="{Binding SignUpCommand}"
                Text="Sign Up"/>
    </VerticalStackLayout>
</ContentView>